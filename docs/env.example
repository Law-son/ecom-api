# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/ecomdb
DB_USER=postgres
DB_PASSWORD=your-database-password

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ecomdb

# JWT Configuration
JWT_SECRET=change-this-to-a-32-plus-char-secret
JWT_EXPIRATION_MINUTES=60

# OAuth2 (Google) Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# OAuth2 Role Mapping (comma-separated emails)
# Emails in OAUTH2_ADMIN_EMAILS will be assigned ADMIN role
# Emails in OAUTH2_STAFF_EMAILS will be assigned STAFF role
# All other emails default to CUSTOMER role
# OAUTH2_ADMIN_EMAILS=admin@example.com,owner@example.com
# OAUTH2_STAFF_EMAILS=staff@example.com

# OAuth2 Redirect URI (where frontend receives tokens after OAuth2 login)
OAUTH2_REDIRECT_URI=http://localhost:5173/oauth2/redirect

